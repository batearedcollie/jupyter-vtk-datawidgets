{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "VTK data format",
  "description": "VTK data format JSON serialization schema",
  "type": "object",
  "properties": {
    "byte_order": {
      "type": "string",
      "pattern": "(LittleEndian)|(BigEndian)"
    },
    "compressor": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "pattern": "P?((ImageData)|(PolyData)|(RectilinearGrid)|(StructuredGrid)|(UnstructuredGrid))"
    },
    "version": {
      "type": "string"
    },
    "dataset": {
      "type": "object",
      "oneOf":[
        { "$ref": "#/definitions/ImageData" },
        { "$ref": "#/definitions/PolyData" },
        { "$ref": "#/definitions/RectilinearGrid" },
        { "$ref": "#/definitions/StructuredGrid" },
        { "$ref": "#/definitions/UnstructuredGrid" },
      ]
    }
  },
  "required": ["type", "version", "dataset"],


  "definitions": {
    "extent": {
      "type": "string",
      "pattern": "\\d+ \\d+ \\d+ \\d+ \\d+ \\d+"
    },
    "Piece": {
      "type": "object",
      "properties": {
        "PointData": {
          "type": "object",
          "properties": {
            "Scalars": { "type": "string" },
            "Vectors": { "type": "string" },
            "Normals": { "type": "string" },
            "Tensors": { "type": "string" },
            "TCoords": { "type": "string" },
            "data_arrays": {
              "type": "array",
              "items": { "$ref": "#/definitions/DataArray" }
            }
          }
        },
        "CellData": {

        }
      },
      "required": ["PointData", "CellData"]
    },
    "DataArray": {
      "type": "object",
      "properties": {
        "type": {
          "type":"string",
          "pattern": "(U?Int(8|16|32|64))|(Float(32|64))"
        },
        "Name": {"type": "string"},
        "NumberOfComponents": {"type": "number"},
        "format": {
          "type": "string",
          "pattern": "(binary)|(appended)|(ascii)"
        },
        "offset": {"type": "number"},
        "data": {
          "type": ["object", "null"]
        }
      }
    },
    "Points": {
      "type": "object",
      "properties": {
          "array": {
            "oneOf":[{"$ref": "#/defintions/DataArray"}]
          }
      }
    },
    "Coordinates": {
      "type": "object",
      "properties": {
          "arrays": {
            "type": "array",
            "items": {"$ref": "#/defintions/DataArray"}
          }
      }
    },
    "ImageData": {
      "type": "object",

      "properties": {
        "origin": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "spacing": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "whole_extent": { "oneOf": [ { "$ref": "#/definitions/extent" } ] },
        "pieces": {
          "type": "array",
          "items": { "$ref": "#/definitions/ImageDataPiece"}
        }
      }
    },
    "ImageDataPiece": {
      "extent": { },
      "point_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      },
      "cell_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      }
    },
    
    "RectilinearGrid": {
      "type": "object",

      "properties": {
        "origin": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "spacing": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "pieces": {
          "type": "array",
          "items": { "$ref": "#/definitions/RectilinearGridPiece"}
        }
      }
    },
    "RectilinearGridPiece": {
      "extent": { "oneOf": [ { "$ref": "#/definitions/extent" } ] },
      "point_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      },
      "cell_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      }
    },
    
    "StructuredGrid": {
      "type": "object",

      "properties": {
        "origin": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "spacing": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "pieces": {
          "type": "array",
          "items": { "$ref": "#/definitions/StructuredGridPiece"}
        }
      }
    },
    "StructuredGridPiece": {
      "extent": { "oneOf": [ { "$ref": "#/definitions/extent" } ] },
      "point_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      },
      "cell_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      }
    },
    
    "PolyData": {
      "type": "object",

      "properties": {
        "origin": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "spacing": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "pieces": {
          "type": "array",
          "items": { "$ref": "#/definitions/PolyDataPiece"}
        }
      }
    },
    "PolyDataPiece": {
      "extent": { "oneOf": [ { "$ref": "#/definitions/extent" } ] },
      "point_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      },
      "cell_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      }
    },
    
    "UnstructuredGrid": {
      "type": "object",

      "properties": {
        "origin": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "spacing": { "type": "string", "pattern": "\\d+ \\d+ \\d+"},
        "pieces": {
          "type": "array",
          "items": { "$ref": "#/definitions/UnstructuredGridPiece"}
        }
      }
    },
    "UnstructuredGridPiece": {
      "extent": { "oneOf": [ { "$ref": "#/definitions/extent" } ] },
      "point_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      },
      "cell_data": {
        "type": "object",
        "oneOf": [{ "$ref": "#/definitions/PointData"}]
      }
    }
  }
}